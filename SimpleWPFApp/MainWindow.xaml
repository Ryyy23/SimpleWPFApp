<Window x:Class="SimpleWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Button1" Content="Start" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="775" Height="280" Grid.RowSpan="2" Click="Button1_Click"/>
        <CheckBox x:Name="checkBox1" Content="CheckBox" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top" Height="42" Width="775" Grid.Row="1" IsEnabled="False"/>
        <ProgressBar x:Name="progressBar1" HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" VerticalAlignment="Top" Width="775" Maximum="10000"/>
    </Grid>
</Window>
